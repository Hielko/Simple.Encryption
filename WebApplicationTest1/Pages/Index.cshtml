@page
@model IndexModel
@{
    ViewData["Title"] = "Simple Encryption test page";
}

<form method="post">

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">String</span>
        </div>
        <input id="i1" type="text" asp-for=@Model.PlainValue value="@Model.PlainValue" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
    </div>


    <div class="form-group">
        <label for="exampleFormControlTextarea1">Encrypted</label>
        <textarea readonly class="form-control rounded-0" id="exampleFormControlTextarea1" rows="10">@Model.EncryptedValue</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>


<script type="text/javascript">
    $(document).ready(function () {
        $("#i1").focus()
    });
</script>

